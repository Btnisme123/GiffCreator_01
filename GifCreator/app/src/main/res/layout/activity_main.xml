<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <HorizontalScrollView
        android:id="@+id/horizontal_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/bottom_navigation_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />
    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/common_size_10"
        android:layout_marginRight="@dimen/common_size_10"
        android:animateLayoutChanges="true"
        android:orientation="vertical"
        app:layout_anchor="@+id/horizontal_scroll_view"
        app:layout_anchorGravity="top|end">

        <LinearLayout
            android:id="@+id/floating_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/common_size_8"
            android:orientation="vertical"
            android:visibility="gone">

            <com.framgia.gifcreator.ui.widget.FloatingButton
                android:id="@+id/fab_camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:src="@drawable/ic_camera"
                app:fab_title="@string/fab_camera" />

            <com.framgia.gifcreator.ui.widget.FloatingButton
                android:id="@+id/fab_gallery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:src="@drawable/ic_gallery"
                app:fab_title="@string/fab_gallery" />

            <com.framgia.gifcreator.ui.widget.FloatingButton
                android:id="@+id/fab_facebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:src="@drawable/ic_facebook"
                app:fab_title="@string/fab_facebook" />
        </LinearLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/main_floating_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:src="@drawable/ic_plus" />
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>
